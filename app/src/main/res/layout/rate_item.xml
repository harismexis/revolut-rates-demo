<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/rate_item_padding_horizontal"
    android:paddingTop="@dimen/rate_item_padding_vertical"
    android:paddingEnd="@dimen/rate_item_padding_horizontal"
    android:paddingBottom="@dimen/rate_item_padding_vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/flag"
        android:layout_width="@dimen/rate_item_icon_size"
        android:layout_height="@dimen/rate_item_icon_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:cardCornerRadius="@dimen/rate_item_icon_radius">

        <ImageView
            android:id="@+id/iconFlag"
            android:layout_width="@dimen/rate_item_icon_size"
            android:layout_height="@dimen/rate_item_icon_size"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/currency_info_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/rate_item_key_margin_start"
        android:layout_toEndOf="@id/flag"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtKey"
            style="@style/RateItemKeyTextView"
            tools:text="AUD" />

        <TextView
            android:id="@+id/txtName"
            style="@style/RateItemTextView"
            tools:text="Japanese Yen" />

    </LinearLayout>

    <EditText
        android:id="@+id/etxtAmount"
        android:layout_width="@dimen/rate_item_text_amount_width"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:imeOptions="flagNoExtractUi"
        android:inputType="numberDecimal"
        tools:text="123.45" />

</RelativeLayout>